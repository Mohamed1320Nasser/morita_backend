# ===============================================
# MORITA BACKEND - ENVIRONMENT VARIABLES
# ===============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control
# ===============================================

# ==================
# SERVER CONFIGURATION
# ==================
PORT=3000
NODE_ENV=development
# Options: development | production | test

# ==================
# DATABASE
# ==================
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE?connection_limit=LIMIT&pool_timeout=TIMEOUT
#
# Connection Pool Configuration (IMPORTANT!):
# - connection_limit: Maximum number of connections in the pool (recommended: 5-10)
# - pool_timeout: Seconds to wait for available connection (default: 10)
# - connect_timeout: Seconds to wait for initial connection (default: 10)
#
# Example with connection pooling:
DATABASE_URL="mysql://username:password@localhost:3306/morita?connection_limit=7&pool_timeout=10&connect_timeout=10"
#
# For production (recommended settings):
# DATABASE_URL="mysql://username:password@host:3306/morita?connection_limit=5&pool_timeout=10&connect_timeout=10&ssl={"rejectUnauthorized":true}"

# ==================
# EMAIL CONFIGURATION
# ==================
MAIL_HOST="mail.example.com"
MAIL_PORT=465
MAIL_USER="no-reply@example.com"
MAIL_PASSWORD="your-email-password"
EMAIL="no-reply@example.com"

# ==================
# DISCORD BOT CONFIGURATION
# ==================

# Bot Credentials
DISCORD_BOT_TOKEN="your-discord-bot-token"
DISCORD_CLIENT_ID="your-client-id"
DISCORD_GUILD_ID="your-guild-id"

# Discord Role IDs
DISCORD_WORKERS_ROLE_ID="role-id-for-workers"
DISCORD_ADMIN_ROLE_ID="role-id-for-admins"
DISCORD_SUPPORT_ROLE_ID="role-id-for-support"
DISCORD_CUSTOMER_ROLE_ID="role-id-for-customers"  # Assigned after onboarding

# Discord Channel IDs
DISCORD_ORDERS_CATEGORY_ID=""
DISCORD_LOGS_CHANNEL_ID=""
DISCORD_ANNOUNCEMENTS_CHANNEL_ID=""
DISCORD_PRICING_CHANNEL_ID=""
DISCORD_CALCULATOR_CHANNEL_ID=""  # Price calculator channel (!s command)
DISCORD_TOS_CHANNEL_ID=""  # Terms of Service channel for onboarding
DISCORD_GENERAL_CHANNEL_ID=""  # General chat channel

# Bot Settings
BOT_PREFIX="!"
EMBED_COLOR="#FFD700"
BRAND_LOGO_URL="https://via.placeholder.com/64x64/FFD700/000000?text=ðŸŽ®"

# ==================
# API SETTINGS
# ==================
API_BASE_URL="http://localhost:3000"
API_AUTH_TOKEN=""

# ==================
# JWT AUTHENTICATION
# ==================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# ==================
# FILE UPLOAD
# ==================
MAX_FILE_SIZE=5242880
# Size in bytes (5MB = 5242880)
UPLOAD_PATH="./uploads"

# ==================
# RATE LIMITING
# ==================
RATE_LIMIT_WINDOW_MS=900000
# Time window in milliseconds (15 minutes = 900000)
RATE_LIMIT_MAX_REQUESTS=100
# Maximum requests per window

# ==================
# LOGGING
# ==================
LOG_LEVEL="info"
# Options: error | warn | info | debug

# ==================
# MONITORING (Optional)
# ==================
SENTRY_ENVIRONMENT="development"
# SENTRY_DSN="your-sentry-dsn"

# ==================
# CORS (Optional)
# ==================
# CORS_ORIGIN="http://localhost:3001"
# Comma-separated list of allowed origins

# ==================
# NOTES
# ==================
# 1. Get Discord credentials from: https://discord.com/developers/applications
# 2. Create MySQL database before running migrations
# 3. Run `npx prisma migrate dev` to setup database
# 4. Run `npx prisma generate` to generate Prisma client
# 5. Never commit this file with real values to version control
